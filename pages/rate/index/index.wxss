page{
  height: 100%
}
.container {
  padding: 2px;
}

.spaceBetween {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: #CCCCCC thin solid;
  width: 100%;
  height: 50px;
  line-height: 50px;
}

.spaceBetweenLeft{
  width:36%;
  padding-left: 5px;
  text-align: left;
  font-size:16px;
}
.spaceBetweenRight{
  padding-right: 5px;
  text-align: right;
  font-size:16px;
}
.flexView{
  text-align: center;
  padding:3px;
}
.flexItem2{
  margin-left: 3px;
  margin-right: 3px;
}
.flexItem1,.flexItem3{
  width:45%;
  text-align: left;
  font-size: 15px;
  height: 100%
  
}

.flexItem1 input,.flexItem3 input{
 padding-left: 3px;
}
.flexItem2{
  width:10%;
  height: 20px;
  
  font-size: 16px;
}

.flexItem2 button{
  padding-left: 10px;
  padding-right: 5px;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
}

