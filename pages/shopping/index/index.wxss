.container {
  padding: 2px;
}

.navTop {
  width: 100%;
  position: absolute;
}

.categoryNav, .subCategoryNav {
  border-left: #000 solid 1px;
  border-bottom: #000 solid 1px;
  display: inline-block;
  text-align: center;
}

.categoryNav {
  margin-top: 40px;
  padding: 5px;
  width: 20%;
}

.selectCategoryNav{
    border-bottom: blue solid 3px
}

.subCategoryNav {
  width: 50px;
  margin-top: 5px;
  padding: 3px;
  height: 20px;
}

.selectCountry {
  float: left;
  margin-top: 3px;
  margin-left: 5px;
}

.searchInput {
  border: #000 thin solid;
  color: red;
  border-radius: 40px;
  padding-left: 10px;
  font-size: 12px;
  width: 80%;
  margin-left: 10%;
  margin-bottom: 15px;
}

.listScrollView {
  width: 100%;
}

.list {
  border: #000 thin solid;
  width: 45%;
  padding: 5px;
  float: left;
  height: 180px;
}

.listImageView {
  width: 100%;
  height: 130px;
  text-align: center;
  line-height: 180px;
}

.listImage {
  width: 120px;
  height: 120px;
  margin: 0 auto;
}

.listItem {
  width: 100%;
}

.listText, .listPrice {
  width: 100%;
  text-align: center;
}

.listText {
  font-size: 16px;
}

.listPrice {
  margin-top: 3px;
  font-size: 12px;
}
